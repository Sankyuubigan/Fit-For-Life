<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lenar.fitforlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.lenar.fitforlife.FitForLifeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.MainActivity" />
        <activity android:name=".screens.PedometerActivity" />
        <activity android:name=".screens.SettingsActivity" />

        <receiver
            android:name="com.lenar.fitforlife.services.SensorRestarterBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="com.android.ServiceStopped" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.lenar.fitforlife.services.StepService"
            android:enabled="true" />
    </application>

</manifest>